<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="one_comment">
    <%= @user.profile %>
    </section>
    <br><%= render 'follow_form' if logged_in? %>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
      <hr>
    <% end %>
  </div>
</div>